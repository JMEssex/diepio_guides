<%= form_for guide do |f| %>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <br>
  <div class="dropdown">
    <%= f.label "This guide is for: " %>
    <%= f.collection_select(:tank_id, Tank.all.order(:name),:id, :name, prompt: true) %>
  </div>
  <br>
  <div class="field">
    <%= f.label "This area is to post your build. Please use the format #,#,#,#,#,#,#,#"%><br>
    [<%= f.text_field :build_text, maxlength: 15, placeholder: "Ex: 3,2,0,7,7,7,7,7"%>]
  </div>
  <br>
  <div class="field">
    <%= f.label "Guide Description" %> <br>
    <%= f.text_area :description %>
  </div>
  <br>
  <div class="field">
    <%= f.label "Other users will be able to upvote or down vote your guide, but you could give them an optional 3rd way to vote: " %> <br>
    <%= f.text_field :vote_third_name?, maxlength: 32, placeholder: "Optional Ex: banana bread?" %>
  </div>

  <br>
  <div class="video">
    <%= f.label "Video proof of build success?" %>
    <%= f.url_field :video, class: "proof", placeholder: "youtu.be/##########" %>
    <p>
      <strong>ALL SUBMISSIONS MUST NOW BE FULL RECORDINGS (uploaded to YouTube)</strong>
      <br>
      Currently we are only allowing the following hosts: "YouTube"
    </p>
  </div>

  <div class="actions">
    <%= f.submit "Post Your Guide!"%>
  </div>
<% end %>

<!DOCTYPE html>
<html>
  <head>
    <title>DiepIoGuides</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <% if current_user %>
      <%= "This is the tale of '#{current_user.user_name}'" %> | <%= link_to 'Home', root_path %> | <%= link_to 'Log Out', logout_path, method: :delete %>
    <% else %>
      <%= link_to 'Home', root_path %> | <%= link_to 'Login', login_path %> or <%= link_to "Sign Up", new_user_path %>
    <% end %>
    <hr>

    <% if notice %>
      <%= notice %>
    <% end %>

    <% if alert %>
      <%= alert %>
    <% end %>

    <%= yield %>
    <hr>
    <br>
    <br>
    <%= params %>
  </body>
</html>
